DEB_CONFIGURE_EXTRA_FLAGS += --enable-gtk-doc \
                             --libdir=/usr/lib/$(DEB_HOST_MULTIARCH)

DEB_DH_MAKESHLIBS_ARGS_libgnome-keyring0 += -V -- -c4

